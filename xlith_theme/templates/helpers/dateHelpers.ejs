<%
/**
 * Date Helper Functions
 * Centralized utilities for date formatting
 *
 * Note: Functions are defined without const/let/var to make them
 * available in the parent template's scope (EJS scoping requirement)
 */

/**
 * Formats a date in long format (e.g., "January 15, 2024")
 */
formatDateLong = function(date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

/**
 * Formats a date in short format (e.g., "Jan 15, 2024")
 */
formatDateShort = function(date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};

/**
 * Returns ISO date string for datetime attributes
 */
formatDateISO = function(date) {
  return new Date(date).toISOString();
};

/**
 * Gets the current year
 */
getCurrentYear = function() {
  return new Date().getFullYear();
};
%>
