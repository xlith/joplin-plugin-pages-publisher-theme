<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Primary Meta Tags -->
  <title><%= $page.title %> | <%= $site.siteName %></title>
  <meta name="title" content="<%= $page.title %> | <%= $site.siteName %>">
  <meta name="description" content="<%= $page.description || $site.siteDescription || 'Welcome to ' + $site.siteName %>">
  <meta name="author" content="<%= $site.author || $site.siteName %>">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="<%= $page.ogType || 'website' %>">
  <meta property="og:url" content="<%= $site.siteUrl %><%= $page.url || '' %>">
  <meta property="og:title" content="<%= $page.title %> | <%= $site.siteName %>">
  <meta property="og:description" content="<%= $page.description || $site.siteDescription || 'Welcome to ' + $site.siteName %>">
  <% if ($page.ogImage || $site.ogImage) { %>
  <meta property="og:image" content="<%= $page.ogImage || $site.ogImage %>">
  <% } %>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="<%= $site.siteUrl %><%= $page.url || '' %>">
  <meta property="twitter:title" content="<%= $page.title %> | <%= $site.siteName %>">
  <meta property="twitter:description" content="<%= $page.description || $site.siteDescription || 'Welcome to ' + $site.siteName %>">
  <% if ($page.ogImage || $site.ogImage) { %>
  <meta property="twitter:image" content="<%= $page.ogImage || $site.ogImage %>">
  <% } %>

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="<%= $site.favicon || '/favicon.ico' %>">
  <link rel="apple-touch-icon" href="<%= $site.appleTouchIcon || '/apple-touch-icon.png' %>">

  <!-- Theme Color -->
  <meta name="theme-color" content="<%= $site.themeColor || '#6fdcbf' %>">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/_assets/css/style.css">
  <link rel="stylesheet" href="/_assets/css/accessibility-fixes.css">

  <% if ($site.canonicalUrl) { %>
  <!-- Canonical URL -->
  <link rel="canonical" href="<%= $site.canonicalUrl %><%= $page.url || '' %>">
  <% } %>
</head>
<body>
  <!-- Skip to main content link for accessibility -->
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <div class="bg-accent" aria-hidden="true"></div>

  <div class="page-wrapper">
    <header role="banner">
      <nav role="navigation" aria-label="Main navigation">
        <ul class="nav-list">
          <li><a href="/" class="<%= $page.title === 'Home' ? 'active' : '' %>" <% if ($page.title === 'Home') { %>aria-current="page"<% } %>>Home</a></li>
          <li><a href="/about" class="<%= $page.title === 'About' ? 'active' : '' %>" <% if ($page.title === 'About') { %>aria-current="page"<% } %>>About</a></li>
          <li><a href="/archive" class="<%= $page.title === 'Blog' ? 'active' : '' %>" <% if ($page.title === 'Blog') { %>aria-current="page"<% } %>>Blog</a></li>
          <li><a href="/tutorials" class="<%= $page.title === 'Tutorials' ? 'active' : '' %>" <% if ($page.title === 'Tutorials') { %>aria-current="page"<% } %>>Tutorials</a></li>
        </ul>
      </nav>
    </header>

    <main id="main-content" role="main">
