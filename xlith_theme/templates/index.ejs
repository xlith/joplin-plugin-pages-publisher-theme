  if ($page.gitlabUrl) socialLinks.push({ url: $page.gitlabUrl, label: 'GitLab', icon: socialIcons.gitlab });
  if ($page.linkedinUrl) socialLinks.push({ url: $page.linkedinUrl, label: 'LinkedIn', icon: socialIcons.linkedin });
  if ($page.twitterUrl) socialLinks.push({ url: $page.twitterUrl, label: 'Twitter', icon: socialIcons.twitter });
  if ($page.mastodonUrl) socialLinks.push({ url: $page.mastodonUrl, label: 'Mastodon', icon: socialIcons.mastodon });
  if ($page.devtoUrl) socialLinks.push({ url: $page.devtoUrl, label: 'Dev.to', icon: socialIcons.devto });
  if ($page.mediumUrl) socialLinks.push({ url: $page.mediumUrl, label: 'Medium', icon: socialIcons.medium });
  if ($page.stackoverflowUrl) socialLinks.push({ url: $page.stackoverflowUrl, label: 'Stack Overflow', icon: socialIcons.stackoverflow });
  if ($page.codepenUrl) socialLinks.push({ url: $page.codepenUrl, label: 'CodePen', icon: socialIcons.codepen });
  if ($page.youtubeUrl) socialLinks.push({ url: $page.youtubeUrl, label: 'YouTube', icon: socialIcons.youtube });
  if ($page.discordUrl) socialLinks.push({ url: $page.discordUrl, label: 'Discord', icon: socialIcons.discord });

  // Add custom social links (only from predefined set for security)
  customSocials.forEach(social => {
    if (social.url && social.label) {
      // Only allow custom links if they provide their own safe icon or use predefined ones
      const safeIcon = socialIcons[social.icon] || null;
      if (safeIcon) {
        socialLinks.push({ url: social.url, label: social.label, icon: safeIcon });
      }
    }
  });
%>

<section class="hero hero-home" aria-labelledby="hero-heading">
  <div class="hero-content">
    <figure class="profile-image-container">
      <img src="<%= $page.profileImage || '/_assets/images/profile.jpg' %>"
           alt="<%= $page.profileImageAlt || ($page.greeting ? $page.greeting.replace(/<[^>]*>/g, '') + ' profile photo' : 'Profile photo') %>"
           class="profile-image"
           width="200"
           height="200">
    </figure>
    <h1 id="hero-heading"><%- $page.greeting || "Hi, I'm <span class='underline-mint'>Your Name</span>" %></h1>
    <p class="subtitle"><%- $page.subtitle || 'Welcome to my website' %></p>

    <% if (socialLinks.length > 0) { %>
    <nav class="social-links" aria-label="Social media links">
      <% socialLinks.forEach(social => { %>
        <a href="<%= social.url %>" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Visit my <%= social.label %> profile">
          <%- social.icon %>
        </a>
      <% }) %>
    </nav>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
